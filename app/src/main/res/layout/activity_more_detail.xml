<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MoreDetail">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                       android:layout_height="200dp"
                                                       app:layout_constraintHeight_percent="0.30"
                                                       app:layout_constraintEnd_toEndOf="parent"
                                                       app:layout_constraintStart_toStartOf="parent"
                                                       app:layout_constraintTop_toTopOf="parent"
                                                       android:id="@+id/constraintLayout2">
        <ImageView android:layout_width="0dp" android:layout_height="0dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:src="@drawable/image1"
                   android:scaleType="centerCrop"
        />
        <ImageView android:layout_width="0dp" android:layout_height="0dp"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   android:background="@drawable/gradient_header"
        />

        <FrameLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@android:color/transparent" app:layout_constraintEnd_toEndOf="parent"
        >
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                               android:layout_height="match_parent">
                <ImageView android:layout_width="32dp" android:layout_height="30dp"
                           app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
                           android:layout_marginStart="@dimen/normal_x2_margin"
                           app:layout_constraintTop_toTopOf="parent"
                           android:layout_marginTop="@dimen/normal_y5_margin"
                           android:padding="4dp"
                           android:src="@drawable/ic_btn_back"
                           android:id="@+id/back"
                           android:background="?attr/selectableItemBackgroundBorderless"
                           android:clickable="true"
                           android:focusable="true"
                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView android:layout_width="0dp" android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="match_parent">
            <TextView
                    android:text="La Mamounia, a symbol of traditional Moroccan hospitality, is located in the heart of the imperial city, 5 minutes walk from the Jemaa El Fna squareâ€¦Read more"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/desc"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="@dimen/normal_x2_margin"
                    android:layout_marginRight="@dimen/normal_x2_margin"
                    android:layout_marginTop="@dimen/normal_x3_margin"
                    style="@style/CardSubTitle"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               app:layout_constraintTop_toBottomOf="@id/desc"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               android:id="@+id/constraintLayout4"
                                                               android:layout_marginTop="@dimen/normal_x3_margin"


            >
                <TextView
                        android:text="Rating"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="@dimen/normal_x2_margin"
                        style="@style/DescTitle"
                        android:layout_marginTop="@dimen/normal_y_margin"
                        android:id="@+id/rating"/>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                                   android:layout_height="15dp"

                                                                   android:layout_marginRight="@dimen/normal_x2_margin"
                                                                   app:layout_constraintEnd_toEndOf="parent"
                                                                   app:layout_constraintTop_toTopOf="@+id/rating"
                                                                   android:id="@+id/constraintLayout3"
                                                                   android:layout_marginBottom="0dp"
                                                                   app:layout_constraintBottom_toBottomOf="@+id/rating">
                    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toStartOf="parent"
                               android:src="@drawable/ic_start_red_filled"
                               android:id="@+id/start1"
                    />
                    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toEndOf="@id/start1"
                               android:src="@drawable/ic_start_red_filled"
                               android:id="@+id/start2"
                    />
                    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toEndOf="@id/start2"
                               android:src="@drawable/ic_start_red_filled"
                               android:id="@+id/start3"
                    />
                    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toEndOf="@id/start3"
                               android:src="@drawable/ic_start_red_filled"
                               android:id="@+id/start4"
                    />
                    <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                               app:layout_constraintTop_toTopOf="parent"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintStart_toEndOf="@id/start4"
                               android:src="@drawable/ic_star_red_empty"
                               android:id="@+id/start5"
                               app:layout_constraintEnd_toEndOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_marginTop="@dimen/normal_y3_margin"
                                                                   app:layout_constraintStart_toStartOf="parent"
                                                                   app:layout_constraintEnd_toEndOf="parent"
                                                                   android:id="@+id/cl_1"
                                                                   app:layout_constraintTop_toBottomOf="@id/rating"
                >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintWidth_percent="0.14"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="Meals"
                              style="@style/DescSubTitle"
                              android:layout_marginLeft="@dimen/normal_x2_margin"
                              android:id="@+id/textView1"/>
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/ic_bar1"
                               app:layout_constraintStart_toEndOf="@+id/textView1"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintTop_toTopOf="parent"
                               android:layout_marginTop="@dimen/normal_y_margin"
                               android:layout_marginBottom="@dimen/normal_y_margin"
                               android:layout_marginLeft="@dimen/normal_x3_margin"
                               android:id="@+id/imageView" app:layout_constraintEnd_toStartOf="@+id/rate1"
                               android:layout_marginRight="@dimen/normal_x2_margin"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="8.5"
                              style="@style/DescSubTitle"
                              android:layout_marginRight="@dimen/normal_x2_margin"
                              android:id="@+id/rate1" app:layout_constraintEnd_toEndOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_marginTop="@dimen/normal_y_margin"
                                                                   app:layout_constraintStart_toStartOf="parent"
                                                                   app:layout_constraintEnd_toEndOf="parent"
                                                                   android:id="@+id/cl_2"
                                                                   app:layout_constraintTop_toBottomOf="@id/cl_1"
                >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintWidth_percent="0.14"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="Decoratoin"
                              style="@style/DescSubTitle"
                              android:layout_marginLeft="@dimen/normal_x2_margin"
                              android:id="@+id/textView2"/>
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/ic_bar2"
                               app:layout_constraintStart_toEndOf="@+id/textView2"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintTop_toTopOf="parent"
                               android:layout_marginTop="@dimen/normal_y_margin"
                               android:layout_marginBottom="@dimen/normal_y_margin"
                               android:layout_marginLeft="@dimen/normal_x3_margin"
                               app:layout_constraintEnd_toStartOf="@+id/rate2"
                               android:layout_marginRight="@dimen/normal_x2_margin"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="8.3"
                              style="@style/DescSubTitle"
                              android:layout_marginRight="@dimen/normal_x2_margin"
                              android:id="@+id/rate2" app:layout_constraintEnd_toEndOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_marginTop="@dimen/normal_y_margin"
                                                                   app:layout_constraintStart_toStartOf="parent"
                                                                   app:layout_constraintEnd_toEndOf="parent"
                                                                   android:id="@+id/cl_3"
                                                                   app:layout_constraintTop_toBottomOf="@id/cl_2"
                >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintWidth_percent="0.14"

                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="Service"
                              style="@style/DescSubTitle"
                              android:layout_marginLeft="@dimen/normal_x2_margin"
                              android:id="@+id/textView3"/>
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/ic_bar3"
                               app:layout_constraintStart_toEndOf="@+id/textView3"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintTop_toTopOf="parent"
                               android:layout_marginTop="@dimen/normal_y_margin"
                               android:layout_marginBottom="@dimen/normal_y_margin"
                               android:layout_marginLeft="@dimen/normal_x3_margin"
                               app:layout_constraintEnd_toStartOf="@+id/rate3"
                               android:layout_marginRight="@dimen/normal_x2_margin"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="8.9"
                              style="@style/DescSubTitle"
                              android:layout_marginRight="@dimen/normal_x2_margin"
                              android:id="@+id/rate3" app:layout_constraintEnd_toEndOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                                   android:layout_height="wrap_content"
                                                                   android:layout_marginTop="@dimen/normal_y_margin"
                                                                   app:layout_constraintStart_toStartOf="parent"
                                                                   app:layout_constraintEnd_toEndOf="parent"
                                                                   android:id="@+id/cl_4"
                                                                   app:layout_constraintTop_toBottomOf="@id/cl_3"
                >
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintWidth_percent="0.14"
                              app:layout_constraintStart_toStartOf="parent"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="Price"
                              style="@style/DescSubTitle"
                              android:layout_marginLeft="@dimen/normal_x2_margin"
                              android:id="@+id/textView4"/>
                    <ImageView android:layout_width="0dp" android:layout_height="wrap_content"
                               android:adjustViewBounds="true"
                               android:src="@drawable/ic_bar4"
                               app:layout_constraintStart_toEndOf="@+id/textView4"
                               app:layout_constraintBottom_toBottomOf="parent"
                               app:layout_constraintTop_toTopOf="parent"
                               android:layout_marginTop="@dimen/normal_y_margin"
                               android:layout_marginBottom="@dimen/normal_y_margin"
                               android:layout_marginLeft="@dimen/normal_x3_margin"
                               app:layout_constraintEnd_toStartOf="@+id/rate4"
                               android:layout_marginRight="@dimen/normal_x2_margin"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                              app:layout_constraintTop_toTopOf="parent"
                              app:layout_constraintBottom_toBottomOf="parent"
                              android:text="8.5"
                              style="@style/DescSubTitle"
                              android:layout_marginRight="@dimen/normal_x2_margin"
                              android:id="@+id/rate4" app:layout_constraintEnd_toEndOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               app:layout_constraintTop_toBottomOf="@id/constraintLayout4"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               android:id="@+id/constraintLayout5"
                                                               android:layout_marginTop="@dimen/normal_x3_margin"
            >
                <TextView
                        android:text="Reviews"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="@dimen/normal_x2_margin"
                        style="@style/DescTitle"
                        android:layout_marginTop="@dimen/normal_y_margin"
                        android:id="@+id/review"/>

                <TextView
                        android:text="View all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginRight="@dimen/normal_x2_margin"
                        style="@style/DescTitle"
                        android:textColor="@color/colorAccent"
                        android:layout_marginTop="@dimen/normal_y_margin"
                        android:id="@+id/viewAAll"/>
                <androidx.cardview.widget.CardView android:layout_width="0dp"
                                                   android:layout_height="wrap_content"
                                                   app:layout_constraintTop_toBottomOf="@+id/review"
                                                   app:layout_constraintBottom_toBottomOf="parent"
                                                   app:layout_constraintEnd_toEndOf="parent"
                                                   app:layout_constraintStart_toStartOf="parent"
                                                   android:layout_marginLeft="@dimen/normal_y2_margin"
                                                   android:layout_marginRight="@dimen/normal_y2_margin"
                                                   android:layout_marginTop="@dimen/normal_y3_margin"
                                                   android:layout_marginBottom="@dimen/normal_y3_margin"
                                                   app:cardElevation="2dp"
                                                   app:cardCornerRadius="@dimen/normal_x_margin"
                >
                    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                                       android:layout_height="match_parent">
                        <TextView
                                android:text="Amine LAHRIM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="@dimen/normal_x2_margin"
                                style="@style/CardTitle"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp"
                                android:layout_marginTop="@dimen/normal_y_margin"
                                android:id="@+id/name"/>
                        <TextView
                                android:text="20 April, 2019"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/name"
                                style="@style/DescSubTitle"
                                android:id="@+id/date" android:layout_marginEnd="@dimen/normal_x2_margin"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginRight="@dimen/normal_x2_margin"
                                android:layout_marginBottom="0dp" app:layout_constraintBottom_toBottomOf="@+id/name"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                   android:adjustViewBounds="true"
                                   android:src="@drawable/ic_calendar"
                                   app:layout_constraintEnd_toStartOf="@+id/date"
                                   android:layout_marginRight="@dimen/normal_x_margin"
                                   app:layout_constraintTop_toTopOf="@+id/date"
                                   app:layout_constraintBottom_toBottomOf="@+id/date"/>
                        <TextView
                                android:text="Featuring a fitness center, Royal Grand Hotel is located in Marrakech, 400 m from Medina Center"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/descCard"
                                app:layout_constraintTop_toBottomOf="@+id/name"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginLeft="@dimen/normal_x2_margin"
                                android:layout_marginRight="@dimen/normal_x2_margin"
                                android:layout_marginTop="@dimen/normal_x3_margin"
                                style="@style/CardSubTitle"
                                android:textColor="@color/colorPrimaryDark"
                                app:layout_constraintEnd_toEndOf="parent"
                        />
                        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="wrap_content"
                                                                           android:layout_height="15dp"
                                                                           android:layout_marginRight="@dimen/normal_x2_margin"
                                                                           app:layout_constraintTop_toBottomOf="@+id/descCard"
                                                                           android:layout_marginLeft="@dimen/normal_x2_margin"
                                                                           app:layout_constraintStart_toStartOf="parent"
                                                                           android:layout_marginTop="@dimen/normal_y3_margin"
                                                                           android:layout_marginBottom="@dimen/normal_y_margin"
                                                                           app:layout_constraintBottom_toBottomOf="parent">
                            <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:src="@drawable/ic_start_red_filled"
                                       android:id="@+id/start1"
                            />
                            <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/start1"
                                       android:src="@drawable/ic_start_red_filled"
                                       android:id="@+id/start2"
                            />
                            <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/start2"
                                       android:src="@drawable/ic_start_red_filled"
                                       android:id="@+id/start3"
                            />
                            <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/start3"
                                       android:src="@drawable/ic_start_red_filled"
                                       android:id="@+id/start4"
                            />
                            <ImageView android:layout_width="wrap_content" android:layout_height="0dp"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintStart_toEndOf="@id/start4"
                                       android:src="@drawable/ic_star_red_empty"
                                       android:id="@+id/start5"
                                       app:layout_constraintEnd_toEndOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="0dp"
                                                               android:layout_height="wrap_content"
                                                               app:layout_constraintTop_toBottomOf="@id/constraintLayout5"
                                                               app:layout_constraintBottom_toBottomOf="parent"
                                                               app:layout_constraintStart_toStartOf="parent"
                                                               app:layout_constraintEnd_toEndOf="parent"
                                                               android:id="@+id/constraintLayout6"
                                                               android:layout_marginTop="@dimen/normal_x3_margin"
                                                               android:layout_marginBottom="@dimen/normal_x3_margin"
            >
                <TextView
                        android:text="Photos"
                        android:textAllCaps="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginLeft="@dimen/normal_x2_margin"
                        style="@style/DescTitle"
                        android:layout_marginTop="@dimen/normal_y_margin"
                        android:id="@+id/photos"/>


                <androidx.recyclerview.widget.RecyclerView android:layout_width="0dp"
                                                           android:layout_height="120dp"
                                                           app:layout_constraintTop_toBottomOf="@+id/photos"
                                                           app:layout_constraintBottom_toBottomOf="parent"
                                                           app:layout_constraintEnd_toEndOf="parent"
                                                           app:layout_constraintStart_toStartOf="parent"
                                                           android:id="@+id/rv_photos"
                                                           android:orientation="horizontal"
                                                           android:layout_marginLeft="@dimen/normal_y2_margin"
                                                           android:layout_marginRight="@dimen/normal_y2_margin"
                                                           android:layout_marginTop="@dimen/normal_y3_margin"
                                                           android:layout_marginBottom="@dimen/normal_y3_margin"
                >
                </androidx.recyclerview.widget.RecyclerView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>